<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Splashscreen">

    <ImageView
        android:id="@+id/wmslogo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80.5dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="80.5dp"
        android:src="@drawable/whitelogo"/>

    <TextView
        android:id="@+id/India"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wmslogo"
        android:text="India's Largest"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#1fbba6"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/India"
        android:text="Education Finance Platform"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#1fbba6"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/processing"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/Education"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        app:indicatorColor="#1fbba6"/>

    <TextView
        android:id="@+id/WeMakeScholars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="WeMakeScholars"
        android:textColor="@color/green"
        android:textStyle="bold" />

</RelativeLayout>